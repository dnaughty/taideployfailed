





<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-3 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                <h1>Classes</h1>
                <% if current_user.role == "schooladmin" %>
                    <%= link_to 'New Class', new_school_lesson_path %> | 
                <% end %>
                <%= link_to 'Back', district_schools_path(@school.district.id) %>
               

            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-9 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Num</th>
                  <th>Field</th>
                  <th>Startdate</th>
                  <th>Enddate</th>
                  <th>Starttime</th>
                  <th>Endtime</th>
                  <th>School</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @lessons.each do |lesson| %>
                  <tr>
                    <td><%= link_to lesson.lessname, lesson_path(lesson.id) %></td>
                    <td><%= lesson.lessnum %></td>
                    <td><%= lesson.lessfield %></td>
                    <td><%= lesson.startdate %></td>
                    <td><%= lesson.enddate %></td>
                    <td><%= lesson.starttime %></td>
                    <td><%= lesson.endtime %></td>
                    <td><%= lesson.school_id %></td>
                     
                    <% if current_user.role == "superadmin" %>                         
                      <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

<br>
        </div>
    </div>
        
</div>


