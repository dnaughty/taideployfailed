







<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-3 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
               <p>
                  <strong>Lastname:</strong>
                  <%= @student.lastname %>
                </p>

                <p>
                  <strong>Firstname:</strong>
                  <%= @student.firstname %>
                </p>

                <p>
                  <strong>Middlename:</strong>
                  <%= @student.middlename %>
                </p>

                <p>
                  <strong>Dob:</strong>
                  <%= @student.dob %>
                </p>

                <p>
                  <strong>Street:</strong>
                  <%= @student.street %>
                </p>

                <p>
                  <strong>City:</strong>
                  <%= @student.city %>
                </p>

                <p>
                  <strong>Zip:</strong>
                  <%= @student.zip %>
                </p>

                <p>
                  <strong>Pronouns:</strong>
                  <%= @student.pronouns %>
                </p>

                <p>
                  <strong>Gender:</strong>
                  <%= @student.gender %>
                </p>

                <%= link_to 'Edit', edit_student_path(@student) %> |
                <%= link_to 'Back', school_students_path(@student.school_id) %>


            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-9 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
                     
          <% @student.lessons.each do |less| %>
           <h1><%= link_to less.lessname, lesson_path(less.id) %></h1>   
          <% end %>
        </div>
    </div>
        
</div>