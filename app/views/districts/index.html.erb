



<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-3 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                <h1>Districts</h1>
                <% if current_user.role == "districtadmin" || current_user.role == "superadmin" %>
                    <%= link_to 'Create New District', new_district_path %>
                <% end %>
            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-9 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
            <table>
              <thead>
                <tr>
                  <th>Dname</th>
                  <th>Dcity</th>
                  <th>Dcounty</th>
                  <th>Dstate</th>
                  <th>Dcountry</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @districts.each do |district| %>
                  <tr>
                    <td><%= district.dname %></td>
                    <td><%= district.dcity %></td>
                    <td><%= district.dcounty %></td>
                    <td><%= district.dstate %></td>
                    <td><%= district.dcountry %></td>
                    <td><%= link_to "KPI's", district %></td> 

                    <td><%= link_to "Schools", district_schools_path(district) %> <br> </td> 
                    <% if current_user.role == "districtadmin" || current_user.role == "superadmin" %>
                        <td><%= link_to 'Edit', edit_district_path(district) %> </td>
                      <% end %>
                    <% if current_user.role == "districtadmin" || current_user.role == "superadmin" %>
                      <td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

<br>
        </div>
    </div>
        
</div>