<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-2 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                <h1>Districts</h1>
                <% if current_user.role == "districtadmin" || current_user.role == "superadmin" %>
                    <%= link_to 'Create New District', new_district_path %>
                <% end %>
            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-10  p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
           <div class="row row-cols-md-2">
             <% @districts.each do |district| %>
                <div class="card" style="width: 18rem;">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name: <%= link_to district.dname, district %>
                    <li class="list-group-item">Town: <%= district.dcity %></li>
                    <li class="list-group-item">County: <%= district.dcounty %></li>
                     <li class="list-group-item">State: <%= district.dstate %></li>
                    <li class="list-group-item">Country: <%= district.dcountry %></li>
                    
                  </ul>
                </div>         
            <% end %>
        </div> 

        </div>
    </div>
        
</div>
                
