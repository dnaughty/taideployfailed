


<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-3 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                 
                <h3><%= link_to @school.sname %></h3>   
                 <h1>Teachers</h1>

                <%= link_to 'New Teacher', new_school_teacher_path %> |
                <%= link_to 'Back', school_path(@school) %>
            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-9 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
           
                <table>
                  <thead>
                    <tr>
                      <th>Firstn</th>
                      <th>Lastn</th>
                      <th>Teachnum</th>
                      <th>School</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @teachers.each do |teacher| %>
                      <tr>
                        <td><%= teacher.firstn %></td>
                        <td><%= teacher.lastn %></td>
                        <td><%= teacher.teachnum %></td>
                        <td><%= teacher.school_id %></td>
                        <td><%= link_to 'Show', teacher %></td>
                        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
                        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>
        </div>
    </div>
        
</div>